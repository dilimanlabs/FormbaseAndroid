<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:res-auto="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/formsView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:animateLayoutChanges="true"
            android:background="@color/yokohama_forms_background"
            android:orientation="vertical"
            >

            <LinearLayout
                android:padding="10dp"
                android:background="@color/yokohama_black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <ImageView
                android:src="@drawable/form_icon"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_marginRight="20dp"/>
                
            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:text="Forms"/>

            </LinearLayout>


            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/layoutForms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <LinearLayout
                android:padding="10dp"
                android:background="@color/yokohama_black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:src="@drawable/subcategory_icon"
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:textColor="@color/white"
                    android:text="Sub Category"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/subcategoryForms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:padding="10dp"
                />

        </LinearLayout>
    </ScrollView>
</merge>